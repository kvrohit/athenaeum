body
  font-family 'Source Sans Pro', 'Ubuntu', sans-serif
  background-color #f9f9f9

/* Generic pane styles */
.mrow, .mcol { /*overflow: hidden;*/ position: absolute; }
.mrow { left: 0; right: 0; }
.mcol { top: 0; bottom: 0; }
.scroll-x { overflow-x: auto; }
.scroll-y { overflow-y: auto; }

/* App specific styles */
.header.mrow { height: 50px; top: 0; }
.body.mrow { top: 50px; bottom: 0; }
