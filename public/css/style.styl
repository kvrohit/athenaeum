.playlist
  max-height 300px
  overflow auto

.glyphicon
  top 2px

.seekbar
  padding 7px 0 10px 15px

.alt-size
  width 190px !important
  height 190px !important

#tracklist
  margin-top 4px

.mosaic-block
  position relative
  float left
  width 160px
  height 230px
  overflow hidden
  margin 10px

  a
    text-decoration none

  .mosaic-overlay
    position absolute
    width 100%
    height 100%
    background-image url('../img/bg-black.png')
    opacity 0
    -moz-opacity 0
    -o-transition-duration .3s
    -moz-transition-duration .3s
    -webkit-transition-duration .3s
    z-index 5

    &:hover
      opacity 1
      -moz-opacity 1
      -o-transition-duration .3s
      -moz-transition-duration .3s
      -webkit-transition-duration .3s

    .details
      font-size 90%
      color #fff
      padding 10px

      p
        line-height 15px

  .mosaic-backdrop
    width 100%
    height 100%
    top 0

    img
      width 100%
      height 100%
